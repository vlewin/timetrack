.devisebox.inset.center
  .sign_up
    %p
      %h2
        %i.icon-user
        Sign up or
        - if controller_name != 'sessions'
          = link_to "Log in", new_session_path(resource_name)

    = form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f|
      %div
        %p
          = f.text_field :username, :class => "center", :placeholder => "username"
      %div
        %p
          = f.email_field :email, :class => "center", :autocomplete => 'off', :placeholder => "email address"
      %div
        %p
          = f.password_field :password, :class => "center", :placeholder => "password"

      %div
        %p
          = f.password_field :password_confirmation, :class => "center", :placeholder => "password confirmation"

      %p
        %div= f.submit "Sign up", :class => "btn btn-success"

  %div= devise_error_messages!
