.row.center
  .devisebox
    %p
      %h2 
        %i.icon-user
        Sign in or
        - if devise_mapping.registerable? && controller_name != 'registrations'
          = link_to "Sign up", new_registration_path(resource_name)
        
    = form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f|
      %div
        %p
          = f.email_field :email, :class => "center", :placeholder => "email address" 
      
      %div
        %p
          = f.password_field :password, :class => "center", :placeholder => "password" 

      %p
        %div= f.submit "Sign in", :class => "btn btn-inverse"

    