.devisebox.inset.center
  .sign_in
    %p
      %h2
        %i.icon-user
        Log in or
        - if devise_mapping.registerable? && controller_name != 'registrations'
          = link_to "Sign up", new_registration_path(resource_name)

    = form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f|
      %div
        %p
          = f.text_field :login, :class => "center", :placeholder => "login or email"
      %div
        %p
          = f.password_field :password, :class => "center", :placeholder => "password"

      %p
        %div= f.submit "Log in", :class => "btn btn-success"
