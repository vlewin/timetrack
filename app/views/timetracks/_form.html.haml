= form_for @timetrack, html: { id: 'form' } do |f|
  = f.text_field :date, {class: 'hidden'}

  .top
    #live-clock
      %a.clock.date-select{ href: '#', 'data-date' => "#{Date.today.strftime('%Y-%m-%d')}"}
        %i.fa.fa-home
        %ul
          %li#hr= "%.2d" % Time.now.hour
          %li#point :
          %li#min= "%.2d" % Time.now.min
          %li#point :
          %li#sec= "%.2d" % Time.now.sec
      %span= "#{@date.strftime("%A")}, #{@date.strftime("%e %B  ")} (#{@date.strftime("%V")})"

  .middle
    .new_record.hidden= @timetrack.new_record?
    .row
      .col-sm-6.col-md-6
        = f.time_select(:start, {}, { class: 'timetrack_start'})
        %p started
      .col-sm-6.col-md-6
        = f.time_select(:finish, {}, { class: 'timetrack_finish'})
        %p finished

    .form-group
      %label duration:
      %duration= @timetrack.duration_in_words
      %label pause:
      %pause= @timetrack.pause

    .form-group
      %balance
        %strong
          = @timetrack.balance.to_time(:long)
          = "(#{@timetrack.duration_in_percent})%"

  .bottom
    .btn-group
      - if @timetrack.new_record?
        = f.button 'Create', class: 'btn btn-success btn-middle inset'
      - else
        = f.button 'Update', class: 'btn btn-success btn-left inset'
        &nbsp;
        = link_to @timetrack, class: 'btn btn-danger btn-right inset', data: { confirm: 'Are you sure?'}, method: :delete  do
          Delete
